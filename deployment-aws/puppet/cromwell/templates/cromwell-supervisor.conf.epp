[program:cromwell]

command = /usr/bin/java -Dconfig.file=/etc/cromwell.conf -jar /opt/cromwell.jar server

user = <%= $cromwell::user %>

directory = /

; Put process stdout output in this file
stdout_logfile = <%= $cromwell::log_dir %>/stdout.log

; Put process stderr output in this file
stderr_logfile = <%= $cromwell::log_dir %>/stderr.log

autorestart=true
stopsignal=QUIT
